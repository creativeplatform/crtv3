{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,


    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" }
    // { "path": "./tsconfig.esm.json" },
    // { "path": "./tsconfig.vite.json" }
  ],
  "extends": "./tsconfig.base.json",
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "out-tsc",
    "out-tsc-esm",
    "out-tsc-cjs",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.test.js",
    "**/*.stories.tsx",
    "**/*.stories.js",
    "app/tools/backend_ui/src/utils/three.js/utils/docs/template/static/scripts/page.js"
  ]
}
